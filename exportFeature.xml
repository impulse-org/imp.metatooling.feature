<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.imp.feature" default="build.feature.jar" basedir=".">
	<import file="../org.eclipse.imp.feature/buildCommon.xml"/>
	<import file="../org.eclipse.imp.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="${imp.feature(id)}"/>
		<property name="feature.version"     value="${imp.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>

	<target name="all.plugins"
		depends="build.imp.metatooling,build.imp.cheatsheets,build.imp.preferences,build.imp.prefspecs">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<copy todir="plugins" file="../org.eclipse.imp.metatooling/org.eclipse.imp.metatooling_${feature.version}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.preferences/org.eclipse.imp.preferences_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.prefspecs/org.eclipse.imp.prefspecs_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.metatooling/org.eclipse.imp.metatooling_${feature.version}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.cheatsheets/org.eclipse.imp.cheatsheets_${plugins.version.31}.jar"/>
	</target>

	<!-- ========================================================================================= -->

	<target name="build.imp.metatooling">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.metatooling"/>
		</antcall>
	</target>

	<target name="build.imp.cheatsheets" depends="build.imp.metatooling">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.cheatsheets"/>
		</antcall>
	</target>

	<target name="build.imp.prefspecs">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.preferences"/>
		</antcall>
	</target>

	<target name="build.imp.preferences">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.prefspecs"/>
		</antcall>
	</target>
</project>
