<?xml version="1.0" encoding="UTF-8"?>
<project name="common" basedir=".">
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="true"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="javacSource" value="1.4"/>
	<property name="javacTarget" value="1.4"/>
	<property name="compilerArg" value=""/>
	<path id="path_bootclasspath">
		<fileset dir="${java.home}/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<property name="eclipse.home" value="f:/eclipse-3.1"/>

	<xmlproperty file="feature.xml" prefix="safari"/>

	<echo message="Building for SAFARI feature version ${safari.feature(version)}"/>

    <property name="safari.version" value="${safari.feature(version)}"/>

	<path id="path_eclipse.build.path">
	    <fileset dir="${eclipse.home}/plugins">
	        <include name="**/*.jar"/>
	    </fileset>
	</path>
	<pathconvert property="eclipse.build.path" refid="path_eclipse.build.path"/>
</project>
